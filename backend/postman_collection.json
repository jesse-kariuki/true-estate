{
  "info": {
    "name": "TrueEstate Backend API",
    "description": "Postman collection for TrueEstate Backend API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+254700000000\",\n    \"password\": \"password123\",\n    \"role\": \"ROLE_TENANT\"\n}"
            }
          },
          "description": "Register a new user. Roles: ROLE_TENANT, ROLE_LANDLORD, ROLE_AGENT, ROLE_OWNER, ROLE_ADMIN"
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\"\n}"
            }
          },
          "description": "Login with email and password. Returns JWT token."
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Onboard Tenant",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/profile/tenant/{systemUserId}",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nationalId\": \"12345678\",\n    \"kraPin\": \"A123456789B\",\n    \"emergencyContactPhone\": \"+254700000001\",\n    \"currentEmployer\": \"Example Corp\"\n}"
            }
          },
          "description": "Create tenant profile. Requires systemUserId from registered user."
        },
        {
          "name": "Onboard Landlord",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/profile/landlord/{systemUserId}",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nationalId\": \"12345678\",\n    \"kraPin\": \"A123456789B\",\n    \"companyName\": \"Doe Properties Ltd\"\n}"
            }
          },
          "description": "Create landlord profile. Requires systemUserId from registered user."
        },
        {
          "name": "Get Trust Certificate",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/profile/trust-certificate",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Get trust certificate for authenticated tenant. Requires ROLE_TENANT."
        }
      ]
    },
    {
      "name": "Properties",
      "item": [
        {
          "name": "Add Property",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/properties/manage/add",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Sunset Apartments\",\n    \"lrNumber\": \"LR/2024/001\",\n    \"location\": \"Nairobi, Kenya\",\n    \"isSectionalConverted\": true,\n    \"units\": [\n        {\n            \"unitNumber\": \"A101\",\n            \"sectionalTitleNo\": \"ST/001/A101\",\n            \"rentAmount\": 50000\n        },\n        {\n            \"unitNumber\": \"A102\",\n            \"sectionalTitleNo\": \"ST/001/A102\",\n            \"rentAmount\": 55000\n        },\n        {\n            \"unitNumber\": \"B201\",\n            \"sectionalTitleNo\": \"ST/001/B201\",\n            \"rentAmount\": 60000\n        }\n    ]\n}"
            }
          },
          "description": "Register a new property with units. isSectionalConverted should be true for sectional properties."
        }
      ]
    },
    {
      "name": "Lease",
      "item": [
        {
          "name": "Apply for Unit",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/lease/apply/{unitId}?startDate=2024-01-01",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Apply for a unit lease. Replace {unitId} with actual unit ID. Pass startDate as query parameter in YYYY-MM-DD format."
        },
        {
          "name": "Approve Lease",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/api/lease/approve/{leaseId}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Approve a pending lease application. Requires ROLE_LANDLORD authority. Replace {leaseId} with actual lease ID."
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Pay Rent",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/rent/{leaseId}?amount=50000&transactionRef=TXN123456",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Process rent payment. Requires ROLE_TENANT authority. Replace {leaseId} with actual lease ID. Pass amount and transactionRef as query parameters."
        }
      ]
    },
    {
      "name": "Alerts",
      "item": [
        {
          "name": "Get Unread Alerts",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/alerts/unread",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Get all unread alerts for the authenticated user."
        },
        {
          "name": "Mark Alert as Read",
          "request": {
            "method": "PATCH",
            "url": "{{baseUrl}}/api/alerts/read/{alertId}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          },
          "description": "Mark a specific alert as read. Replace {alertId} with actual alert ID."
        }
      ]
    }
  ]
}
